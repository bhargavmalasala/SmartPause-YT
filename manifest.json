{
  "manifest_version": 3,
  "name": "SmartPause YT",
  "version": "1.1",
  "description": "Pauses YouTube video when you switch tabs and resumes when you return.",
  "permissions": ["storage"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "image.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
